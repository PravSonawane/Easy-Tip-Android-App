<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fragment_main_relLyt_parent_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.merryapps.easytip.ui.tip.MainFragment"
    >

    <ScrollView
        android:id="@+id/activity_main_parent_scrllVw_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="40dp"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/activity_main_parent_relLyt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/activity_main_relLyt_bill_amount_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_main_default_section_padding_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_main_default_section_padding_vertical">

                <TextView
                    android:id="@+id/activity_main_txtVw_bill_amount_hint_id"
                    style="@style/HintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:includeFontPadding="false"
                    android:text="@string/hint_txt_bill_amount"
                    tools:text="Bill Amount" />

                <EditText
                    android:id="@+id/activity_main_edtTxt_bill_amount_id"
                    style="@style/BillAmountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/activity_main_txtVw_bill_amount_hint_id"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_main_relLyt_tip_amount_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_relLyt_bill_amount_id"
                android:paddingBottom="@dimen/activity_main_default_section_padding_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_main_default_section_padding_vertical">

                <TextView
                    android:id="@+id/activity_main_txtVw_tip_percentage_hint_id"
                    style="@style/HintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:includeFontPadding="false"
                    android:text="@string/hint_text_tip_percentage"
                    tools:text="Tip Percentage" />

                <TextView
                    android:id="@+id/activity_main_txtVw_tip_percentage_id"
                    style="@style/NumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_main_txtVw_tip_percentage_hint_id"
                    tools:text="15" />

                <TextView
                    android:id="@+id/activity_main_txtVw_tip_percentage_symbol_id"
                    style="@style/SymbolText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/activity_main_txtVw_tip_percentage_id"
                    android:layout_alignBottom="@+id/activity_main_txtVw_tip_percentage_id"
                    android:layout_below="@id/activity_main_txtVw_tip_percentage_hint_id"
                    android:layout_toRightOf="@id/activity_main_txtVw_tip_percentage_id"
                    android:includeFontPadding="false"
                    android:text="%"
                    tools:text="%" />

                <TextView
                    android:id="@+id/activity_main_txtVw_tip_amount_hint_id"
                    style="@style/HintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:includeFontPadding="false"
                    android:text="@string/hint_text_tip_amount"
                    tools:text="Tip Amount" />

                <TextView
                    android:id="@+id/activity_main_txtVw_tip_amount_id"
                    style="@style/NumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/activity_main_txtVw_tip_amount_hint_id"
                    tools:text="17.32" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_main_relLyt_split_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_relLyt_tip_amount_id"
                android:paddingBottom="@dimen/activity_main_default_section_padding_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/activity_main_txtVw_people_hint_id"
                    style="@style/HintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:includeFontPadding="false"
                    android:text="@string/hint_text_people"
                    tools:text="People" />

                <TextView
                    android:id="@+id/activity_main_txtVw_people_count_id"
                    style="@style/NumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/activity_main_txtVw_people_hint_id"
                    tools:text="4" />


                <TextView
                    android:id="@+id/activity_main_txtVw_per_person_hint_id"
                    style="@style/HintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:includeFontPadding="false"
                    android:text="@string/hint_text_each_persons_share"
                    tools:text="Each person's share" />

                <TextView
                    android:id="@+id/activity_main_txtVw_share_id"
                    style="@style/NumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/activity_main_txtVw_per_person_hint_id"
                    tools:text="17.32" />


            </RelativeLayout>

            <View
                android:id="@+id/activity_main_divider_after_split_id"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/activity_main_relLyt_split_id"
                android:background="@drawable/shape_divider"
                />

            <RelativeLayout
                android:id="@+id/activity_main_relLyt_total_amount_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_divider_after_split_id"
                android:paddingBottom="@dimen/activity_main_default_section_padding_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_main_default_section_padding_vertical">

                <TextView
                    android:id="@+id/activity_main_txtVw_total_amount_hint_id"
                    style="@style/HintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:includeFontPadding="false"
                    android:text="@string/hint_text_total_amount"
                    tools:text="Total Amount" />

                <TextView
                    android:id="@+id/activity_main_txtVw_total_amount_id"
                    style="@style/NumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/activity_main_txtVw_total_amount_hint_id"
                    tools:text="17.32" />

                <TextView
                    android:id="@+id/activity_main_txtVw_round_up_hint_id"
                    style="@style/HintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:includeFontPadding="false"
                    android:text="@string/hint_text_round_up"
                    tools:text="Round Up"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_main_swtch_round_up_id"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/activity_main_lnrLyt_settings_wrapper_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_relLyt_total_amount_id"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/activity_main_relLyt_quote_parent_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <RelativeLayout
                        android:id="@+id/activity_main_relLyt_quote_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_rounded_corners_12percent_black"
                        android:padding="@dimen/activity_main_quote_relLyt_padding_all"
                        android:animateLayoutChanges="true">

                        <TextView
                            android:id="@+id/activity_main_txtVw_quote_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="start"
                            android:textStyle="italic"
                            android:paddingBottom="16dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            tools:text="Test Quote"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/activity_main_txtVw_quote_author_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/activity_main_txtVw_quote_id"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            tools:text="Test Author"
                            android:visibility="visible"/>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/activity_main_lnrLyt_settings_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/fragment_dialog_settings_lnrlyt_percentage_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingTop="24dp"
                                android:gravity="center">

                                <RelativeLayout
                                    android:id="@+id/activity_main_relLyt_settings_tip_percentage_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/SettingsRelativeLayout">

                                    <ImageView
                                        android:id="@+id/activity_main_imgVw_tip_percentage_id"
                                        android:layout_width="20sp"
                                        android:layout_height="20sp"
                                        android:src="@drawable/ic_percent_amber_806600_18dp"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentStart="true" />
                                    <SeekBar
                                        android:id="@+id/activity_main_skBr_tip_percentage_id"
                                        style="@style/SeekBar"
                                        android:layout_marginStart="12dp"
                                        android:layout_toEndOf="@id/activity_main_imgVw_tip_percentage_id"/>

                                    <TextView
                                        android:id="@+id/activity_main_txtVw_tip_percentage_settings_value_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_toEndOf="@+id/activity_main_skBr_tip_percentage_id"
                                        style="@style/ValueText"
                                        tools:text="5"/>
                                </RelativeLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/fragment_dialog_settings_lnrlyt_people_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <RelativeLayout
                                    android:id="@+id/activity_main_relLyt_settings_people_count_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/SettingsRelativeLayout">

                                    <ImageView
                                        android:id="@+id/activity_main_imgVw_people_count_id"
                                        android:layout_width="32sp"
                                        android:layout_height="32sp"
                                        android:src="@drawable/ic_group_black_18dp"
                                        />
                                    <SeekBar
                                        android:id="@+id/activity_main_skBr_people_count_id"
                                        style="@style/SeekBar"
                                        android:layout_toEndOf="@id/activity_main_imgVw_people_count_id"/>
                                    <TextView
                                        android:id="@+id/activity_main_txtVw_people_count_settings_value_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_toEndOf="@+id/activity_main_skBr_people_count_id"
                                        style="@style/ValueText"
                                        tools:text="5"/>
                                </RelativeLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/fragment_dialog_settings_relLyt_buttons_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Button
                                    android:id="@+id/fragment_dialog_settings_btn_done_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"
                                    style="@style/SettingsButtonText"
                                    android:text="DONE"/>

                                <Button
                                    android:id="@+id/fragment_dialog_settings_btn_cancel_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CANCEL"
                                    android:layout_alignParentTop="true"
                                    style="@style/SettingsButtonText"
                                    android:layout_toStartOf="@+id/fragment_dialog_settings_btn_done_id"
                                    android:visibility="gone"/>
                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_main_settings_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:useCompatPadding="true"
        android:src="@drawable/ic_tune_white_18dp"/>
</RelativeLayout>