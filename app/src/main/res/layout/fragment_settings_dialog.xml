<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/fragment_settings_dialog_parent_horizontal_padding"
    android:paddingRight="@dimen/fragment_settings_dialog_parent_horizontal_padding"
    android:paddingTop="@dimen/fragment_settings_dialog_parent_top_padding"
    android:paddingBottom="@dimen/fragment_settings_dialog_parent_bottom_padding">

    <LinearLayout
               android:id="@+id/activity_main_lnrLyt_settings_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_dialog_settings_lnrlyt_percentage_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment_dialog_settings_txtVw_percentage_hint_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Percentage"/>

            <RelativeLayout
                android:id="@+id/activity_main_relLyt_settings_tip_percentage_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SettingsRelativeLayout">

                <ImageView
                    android:id="@+id/activity_main_imgVw_tip_percentage_id"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:src="@drawable/percent_grey_600_18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
                <SeekBar
                    android:id="@+id/activity_main_skBr_tip_percentage_id"
                    style="@style/SeekBar"
                    android:layout_marginLeft="12dp"
                    android:layout_toEndOf="@id/activity_main_imgVw_tip_percentage_id"/>

                <TextView
                    android:id="@+id/activity_main_txtVw_tip_percentage_settings_value_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/activity_main_skBr_tip_percentage_id"
                    style="@style/ValueText"
                    tools:text="5"
                    android:text="5"/>
            </RelativeLayout>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/fragment_dialog_settings_lnrlyt_people_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fragment_dialog_settings_txtVw_people_hint_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="People"/>

               <RelativeLayout
                   android:id="@+id/activity_main_relLyt_settings_people_count_id"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/SettingsRelativeLayout">

                   <ImageView
                       android:id="@+id/activity_main_imgVw_people_count_id"
                       android:layout_width="32sp"
                       android:layout_height="32sp"
                       android:src="@drawable/ic_face_grey_600_18dp"
                       />
                   <SeekBar
                       android:id="@+id/activity_main_skBr_people_count_id"
                       style="@style/SeekBar"
                       android:layout_toEndOf="@id/activity_main_imgVw_people_count_id"/>
                   <TextView
                       android:id="@+id/activity_main_txtVw_people_count_settings_value_id"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentTop="true"
                       android:layout_toEndOf="@+id/activity_main_skBr_people_count_id"
                       style="@style/ValueText"
                       tools:text="5"
                       android:text="5"/>
               </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_dialog_settings_lnrlyt_satisfaction_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fragment_dialog_settings_txtVw_satisfaction_hint_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Percentage"/>

               <RelativeLayout
                   android:id="@+id/activity_main_relLyt_settings_satisfaction_id"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/SettingsRelativeLayout">

                   <ImageView
                       android:id="@+id/activity_main_imgVw_satisfaction_id"
                       android:layout_width="32sp"
                       android:layout_height="32sp"
                       android:src="@drawable/ic_tag_faces_grey_600_18dp"
                       />
                   <SeekBar
                       android:id="@+id/activity_main_skBr_tip_satisfaction_id"
                       style="@style/SeekBar"
                       android:layout_toEndOf="@id/activity_main_imgVw_satisfaction_id"/>

                   <TextView
                       android:id="@+id/activity_main_txtVw_satisfaction_settings_value_id"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentTop="true"
                       android:layout_toEndOf="@+id/activity_main_skBr_tip_satisfaction_id"
                       style="@style/ValueText"
                       tools:text="5"
                       android:text="5"/>
               </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>