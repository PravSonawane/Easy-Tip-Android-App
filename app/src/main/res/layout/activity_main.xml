<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/activity_main_relLyt_bill_amount_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/activity_main_txtVw_bill_amount_hint_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:includeFontPadding="false"
                    android:text="Bill Amount"
                    android:textStyle="bold"
                    tools:text="Bill Amount" />

                <EditText
                    android:id="@+id/activity_main_edtTxt_bill_amount_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/activity_main_txtVw_bill_amount_hint_id"

                    android:includeFontPadding="false"
                    android:inputType="numberDecimal"
                    android:textAlignment="textEnd"
                    android:textSize="48sp"
                    tools:text="42.42" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_main_relLyt_tip_amount_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_relLyt_bill_amount_id"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ripple_background"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/activity_main_txtVw_round_up_hint_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:includeFontPadding="false"
                        android:paddingBottom="4dp"
                        android:text="Round mode"
                        android:textStyle="bold"
                        tools:text="Round mode" />

                    <ImageView
                        android:id="@+id/activity_main_imgVw_tip_round_up_hint"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/activity_main_txtVw_round_up_hint_id"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/not_rounded_pink_700_48dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/relativeLayout"
                    android:background="@drawable/ripple_background"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/activity_main_txtVw_tip_amount_hint_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:includeFontPadding="false"
                        android:text="Tip Amount"
                        android:textStyle="bold"
                        tools:text="Tip Amount" />

                    <TextView
                        android:id="@+id/activity_main_txtVw_tip_amount_id"
                        style="@style/NumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/activity_main_txtVw_tip_amount_hint_id"
                        android:text="17.32"
                        tools:text="17.32" />

                </RelativeLayout>

            </RelativeLayout>

            <!--<View
                android:id="@+id/activity_main_divider_after_tip_id"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/shape_divider"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_below="@id/activity_main_relLyt_tip_amount_id"/>-->


            <RelativeLayout
                android:id="@+id/activity_main_relLyt_tip_percentage_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_relLyt_tip_amount_id"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ripple_background"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/activity_main_txtVw_satisfaction_hint_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:includeFontPadding="false"
                        android:paddingBottom="4dp"
                        android:text="Satisfaction"
                        android:textStyle="bold"
                        tools:text="Satisfaction" />

                    <ImageView
                        android:id="@+id/activity_main_imgVw_satisfaction_hint"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/activity_main_txtVw_satisfaction_hint_id"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/emoticon_happy_amber_700_48dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/relativeLayout1"
                    android:background="@drawable/ripple_background"
                    android:clickable="true">

                    <SeekBar
                        android:id="@+id/activity_main_skBr_tip_percentage_id"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layoutDirection="rtl"
                        android:max="20" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/relativeLayout2"
                    android:background="@drawable/ripple_background"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/activity_main_txtVw_tip_percentage_hint_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/activity_main_txtVw_tip_percentage_hint_id"
                        android:includeFontPadding="false"
                        android:text="Tip Percentage"
                        android:textStyle="bold"
                        tools:text="Tip Percentage" />

                    <TextView
                        android:id="@+id/activity_main_txtVw_tip_percentage_symbol_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/activity_main_txtVw_tip_percentage_id"
                        android:layout_alignBottom="@+id/activity_main_txtVw_tip_percentage_id"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/activity_main_txtVw_tip_percentage_hint_id"
                        android:includeFontPadding="false"
                        android:text="%"
                        android:textSize="24sp"
                        tools:text="%" />

                    <TextView
                        android:id="@+id/activity_main_txtVw_tip_percentage_id"
                        style="@style/NumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_main_txtVw_tip_percentage_hint_id"
                        android:layout_toLeftOf="@id/activity_main_txtVw_tip_percentage_symbol_id"
                        android:paddingRight="4dp"
                        android:text="15"
                        tools:text="15" />

                </RelativeLayout>


            </RelativeLayout>

            <!--<View
                android:id="@+id/activity_main_divider_after_tip_percentage_id"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/shape_divider"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_below="@id/activity_main_relLyt_tip_percentage_id"/>-->

            <RelativeLayout
                android:id="@+id/activity_main_relLyt_split_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_relLyt_tip_percentage_id"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ripple_background"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/activity_main_txtVw_people_hint_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:includeFontPadding="false"
                        android:paddingBottom="4dp"
                        android:text="People"
                        android:textStyle="bold"
                        tools:text="People" />

                    <ImageView
                        android:id="@+id/activity_main_imgVw_tip_share_id"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/activity_main_txtVw_people_hint_id"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/face_pink_700_48dp" />

                    <TextView
                        android:id="@+id/activity_main_txtVw_people_count_symbol_id"
                        style="@style/NumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/activity_main_imgVw_tip_share_id"
                        android:layout_toRightOf="@id/activity_main_imgVw_tip_share_id"
                        android:paddingStart="4dp"
                        android:text="x"
                        android:textSize="24sp"
                        tools:text="x" />

                    <TextView
                        android:id="@+id/activity_main_txtVw_people_count_id"
                        style="@style/NumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/activity_main_imgVw_tip_share_id"
                        android:layout_toEndOf="@+id/activity_main_txtVw_people_count_symbol_id"
                        android:paddingRight="4dp"
                        android:paddingStart="4dp"
                        android:text="4"
                        tools:text="4" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayout5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/relativeLayout4"
                    android:background="@drawable/ripple_background"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/activity_main_txtVw_per_person_hint_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:includeFontPadding="false"
                        android:text="Each person's share"
                        android:textStyle="bold"
                        tools:text="Each person's share" />

                    <TextView
                        android:id="@+id/activity_main_txtVw_share_id"
                        style="@style/NumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/activity_main_txtVw_per_person_hint_id"
                        android:text="17.32"
                        tools:text="17.32" />

                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/activity_main_divider_after_split_id"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/activity_main_relLyt_split_id"
                android:background="@drawable/shape_divider"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" />

            <RelativeLayout
                android:id="@+id/activity_main_relLyt_total_amount_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_relLyt_split_id"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/activity_main_txtVw_total_amount_hint_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:includeFontPadding="false"
                    android:text="Total Amount"
                    android:textStyle="bold"
                    tools:text="Total Amount" />

                <TextView
                    android:id="@+id/activity_main_txtVw_total_amount_id"
                    style="@style/NumberText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/activity_main_txtVw_total_amount_hint_id"
                    android:text="17.32"
                    tools:text="17.32" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/activity_main_relLyt_total_amount_id"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:text="A wise man should have money in his head, but not in his heart."
                    android:textSize="24sp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>